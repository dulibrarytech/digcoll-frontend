<% include partials/header %>
<% include partials/title-banner %>

<div class="row collection-breadcrumbs">
	<div class="col-md-12">
		<% if (collection_breadcrumb_trail) { %>
			<%- collection_breadcrumb_trail %>
		<% } %>
	</div>
</div>

<div class="row facet-breadcrumbs">
	<div class="col-md-12">
		<% if (facet_breadcrumb_trail) { %>
			<%- facet_breadcrumb_trail %>
		<% } %>
	</div>
</div>

<div class="row no-side-margin section content results-display">
	<div class="col-md-3">
		<% if(error == null) { %>
			<div class="result-facets">
				<h4>Filter By</h4>
				<hr>
				<% include partials/facets %>
			</div>
		<% } %>
	</div>

	<div class="col-md-9 collections-wrapper">
		<h4><%= current_collection_title %></h4>
	    <hr>
	    <% if(error) { %>
  			<h5><%- error %></h5>
  		<% } else { %>

  			<% include partials/paginator %>

  			<div id="collections">
  				<div class="row">
	  				<% for (var i = 0; i < collections.length; i++) { %>

	  					<div class="col-sm-3 collection-thumb">
							<dl class="item">
								<dt>
									<a href="<%= root_url %><%= collections[i].path %>/<%= collections[i].pid %>">
			            				<div class="item-thumb">
									  		<img src="<%= collections[i].tn %>" alt="<%= collections[i].title %>">
										</div>
									</a>
								</dt>
								<dd>
									<div class="item-details">
									  	<h3 class="item-title"><a href="<%= root_url %><%= collections[i].path %>/<%= collections[i].pid %>"><%= collections[i].title %></a></h3>
									</div>
								</dd>
							</dl>
						</div>

	  				<% } %>
	  			</div>

	    	</div>


	    <% } %>
	</div>
</div>

<% include partials/footer %>





