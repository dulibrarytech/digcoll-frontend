<div id="search">
	<form id="search-form" method="get" action="/repository/search">
		<div class="form-group">
		    <select class="form-control" name="type" id="search-type">
		    	<option>All</option>
				<option>Title</option>
				<option>Creator</option>
				<option>Subject</option>
				<option>Description</option>
		    </select>
	    	<input type="text" class="form-control" id="search-input" name="q" aria-describedby="searchHelp" placeholder="Search" required>
	    	<button type="submit" class="btn btn-primary" id="search-button"><i class="fa fa-search fa-lg" aria-hidden="true"></i></button>
	  	</div>
	</form>
	<script>
		$("#search-form").validate();
	</script>
</div>