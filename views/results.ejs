<% include partials/header %>

<div id="main">
	<span id="site-title">Special Collections @ DU</span>
	<% include partials/banner %>

	<% include partials/search %>

	<div id="content">

		<div id="pagination">
			<span>Showing results <strong>1 - 4</strong> of <strong>4</strong></span>
		</div>
		
		<% include partials/facets %>

		<div id="search-results">

			<% if (results && results.length > 0) { %>


					<% results.forEach(function(result) { %>

						<div id="search-result">

						
							<dl class="search-result-tn">
								<a href="/repository/object/<%- result.pid%>" title="">
									<img src="<%- result.tn %>" alt="Img">
								</a>
							</dl>

							<dl class="search-result-data">
								<dt>Title:</dt>
								<dd><a href="/repository/object/<%- result.pid%>"><%- result.title %></a></dd>

								<% if (result.namePersonal) { %>
									<dt>Creator:</dt>
									<dd><%- result.namePersonal %></dd>
								<% } %>

								<% if (result.abstract) { %>
									<dt>Description:</dt>
									<dd id="result-description"><%- result.abstract %></dd>
								<% } %>
							</dl>

						</div>




					<% }); %>
					



			<% } else { %>
				<h3>No results found</h3>
			<% } %>

		</div>
	</div>
</div>

<% include partials/footer %>