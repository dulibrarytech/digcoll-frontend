<% include partials/headerUV %>

    <title>UV Hello World</title>
    <style>
        #uv {
            width: 800px;
            height: 600px;
        }
    </style>

    
    <div id="uv" class="uv" style="margin-top: 100px"></div>

    <script>
        window.addEventListener('uvLoaded', function (e) {
            createUV('#uv', {
                iiifResourceUri: '<% manifest %>',
                configUri: '<%- base_url %>/libs/universalviewer/uv-config.json',
                root: '../../libs/universalviewer/uv'
            }, new UV.URLDataProvider());
        }, false);
    </script>

